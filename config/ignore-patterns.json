{
  "description": "Unified ignore patterns for all development tools - single source of truth",
  "version": "1.0.0",
  "patterns": {
    "common": [
      ".git/",
      ".venv/",
      "venv/",
      "node_modules/",
      "build/",
      "dist/",
      "__pycache__/",
      ".mypy_cache/",
      ".pytest_cache/",
      ".ruff_cache/",
      "etc/",
      ".github/",
      ".husky/",
      "logs/",
      "coverage/",
      "htmlcov/",
      "*.egg-info/",
      ".eggs/",
      "server.lock",
      "mutants/",
      ".stryker-tmp/"
    ],
    "system_files": [
      ".DS_Store",
      "Thumbs.db",
      "ehthumbs.db",
      "Desktop.ini",
      "*.code-workspace",
      ".vscode/",
      ".idea/"
    ],
    "compiled_files": [
      "*.py[cod]",
      "*$py.class",
      "*.min.css",
      "*.css.map",
      "*.js.map",
      "*.d.ts"
    ],
    "logs_and_temp": [
      "*.log",
      "*.tmp",
      "*.swp",
      "*.swo",
      "*.bak",
      "*~",
      ".eslintcache",
      "npm-debug.log*",
      "yarn-debug.log*",
      "yarn-error.log*",
      "pnpm-debug.log*",
      ".cache/",
      ".cache-loader/",
      "tmp/",
      "tmp_*/",
      "temp/"
    ],
    "test_artifacts": [
      "jest-cache/",
      "jest-coverage/",
      "coverage.*",
      "*.cover",
      "*.pyc",
      "*.pyo",
      "test-results/",
      "playwright-report/"
    ],
    "extension_specific": [
      "extension-instrumented/",
      "extension/dist/",
      "tests/extension/test_extension_ui_e2e.spec.ts",
      "tests/extension/test_extension_ui_e2e.js"
    ],
    "config_files": [
      "babel.config.js",
      "stryker.conf.js",
      "jest.config.js",
      "eslint.config.cjs",
      ".prettierrc",
      ".stylelintrc.json",
      ".flake8",
      "pyproject.toml",
      "tsconfig.json",
      "mutmut.ini"
    ],
    "environment_files": [".env", ".envrc", "*.env", "*.envrc"],
    "coverage_files": [
      ".coverage",
      ".coverage.*",
      "coverage_html/",
      "htmlcov/"
    ],
    "lock_files": [
      "package-lock.json",
      "uv.lock",
      "yarn.lock",
      "pnpm-lock.yaml"
    ],
    "reports_and_docs": ["reports/", "docs/_build/", "docs/.doctrees/"],
    "ci_and_deployment": ["ci/", ".github/workflows/", ".github/actions/"],
    "hypothesis_cache": [".hypothesis/"]
  },
  "tool_specific": {
    "git": {
      "description": "Git ignore patterns - subset of common + system + logs + environment",
      "patterns": [
        "common",
        "system_files",
        "logs_and_temp",
        "test_artifacts",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "prettier": {
      "description": "Prettier ignore patterns - all patterns except config files",
      "patterns": [
        "common",
        "system_files",
        "compiled_files",
        "logs_and_temp",
        "test_artifacts",
        "extension_specific",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "eslint": {
      "description": "ESLint ignore patterns - common + extension specific + config files",
      "patterns": [
        "common",
        "extension_specific",
        "config_files",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "stylelint": {
      "description": "Stylelint ignore patterns - common + compiled CSS files",
      "patterns": [
        "common",
        "compiled_files",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "jest": {
      "description": "Jest ignore patterns - common + extension specific",
      "patterns": [
        "common",
        "extension_specific",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "flake8": {
      "description": "Flake8 ignore patterns - common + compiled Python files",
      "patterns": [
        "common",
        "compiled_files",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "black": {
      "description": "Black ignore patterns - common + compiled Python files",
      "patterns": [
        "common",
        "compiled_files",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "ruff": {
      "description": "Ruff ignore patterns - common + compiled Python files",
      "patterns": [
        "common",
        "compiled_files",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    },
    "isort": {
      "description": "isort ignore patterns - common",
      "patterns": [
        "common",
        "environment_files",
        "coverage_files",
        "lock_files",
        "reports_and_docs",
        "ci_and_deployment",
        "hypothesis_cache"
      ]
    }
  }
}
