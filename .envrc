# .envrc — Automatically activate the project virtual environment and set server directory
# Requires direnv (https://direnv.net/) and its shell hook in your ~/.zshrc or bashrc.

# If the .venv folder exists, source its activate script
if [ -d ".venv" ] && [ -f ".venv/bin/activate" ]; then
  source ".venv/bin/activate"
  export VIDEODOWNLOADER_SERVER_DIR="$PWD/server"
  echo "✅ Virtual environment activated (uv-managed)"
fi 